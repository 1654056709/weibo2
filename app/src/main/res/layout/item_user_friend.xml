<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_user_friend_head"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/item_user_friend_screen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_user_friend_head"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/item_user_friend_weibo_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_user_friend_screen_name"
                android:layout_toRightOf="@id/item_user_friend_head"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
