<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
    >


    <ImageView
        android:id="@+id/item_select_user_login_user_head_image_view"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_oauth_hint"/>

    <TextView
        android:id="@+id/item_select_user_login_user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/item_select_user_login_user_head_image_view"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:text="hello"/>


</RelativeLayout>
